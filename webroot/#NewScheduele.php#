<script>
function addMore() {
   $("<DIV>").load("input.php", function() {
      $("#product").append($(this).html());
    });
}

function deleteRow() {
   $('DIV.product-item').each(function(index, item){
      jQuery(':checkbox', this).each(function () {
         if ($(this).is(':checked')) {
    $(item).remove();
         }
      });
   });
}
</script>

